<h2>User info</h2>
    <table>
        <tbody>
            <tr>
                <th>name</th>
                <th>testes</th>
            </tr>
            <tr>
                <th>introduction</th>
                <th></th>
            </tr>
        </tbody>
    </table>
    <div>
        <%= link_to "user", root_path %>
    </div>
    
<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    
    <div class="field">
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
    </div>
    
    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  
<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <%= image_tag post_image.get_image %>
            <td><%= image_tag 'sample-author1.jpg' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>